<view class="canchoose" hidden="{{show == false}}">
  状态：<text class="state">{{flag===true ? "可选" : "不可选"}}</text>
</view>
<view class="submit">
  <button type="primary" plain  bindtap="submitAppointment">提交预约</button>
</view>
