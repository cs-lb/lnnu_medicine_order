/* pages/home/home.wxss */
.avatar-wrapper {
  margin: 40rpx;
  padding: 0;
  border-radius: 20rpx;
}

.avatar-wrapper .avatar {
  width: 100rpx;
  height: 100rpx;
  display: block; 
}

.sub-btn {
  margin-top: 40rpx;
  background-color: #ffffff;
}


.page_container {
  background-color: #ffffff;
  height: 100vh;
  font-family: PingFang SC;
}

.top_bg {
  height: 120rpx;
  background-color: #ffffff
}

.main_content {
  background-color: #ffffff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(100vh - 120rpx);
  position: relative;
}

.userinfo_container {
  display: flex;
  gap: 80rpx;
  align-items: center;
  gap: 20rpx;
  position: absolute;
  top: -30rpx;
  padding: 0rpx 60rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  /* background-color: #e5e5e5; */
  border-radius: 50%;
  transform: scale(1.8);
}

.username {
  color: #333;
  font-size: 32rpx;
  margin-top: 20rpx;
  color: rgba(0, 0, 0, 0.9);
  max-width: 200rpx;
}

.settings_container {
  position: relative;
  top: 100rpx;
  padding: 0 0rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  background-color: #ffffff;
}

.setting_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  font-size: 28rpx;
  background:#ffffff;
}
.setting_item:hover{
    background-color:#f2fbf9;
    
}
.setting_item:visited{
    background: #ffffff;
}
.left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-left: 40rpx;
}

.contact-button {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  padding-left: 0rpx;
  margin: 0;
  width: 400rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 56rpx;
  text-align: left;
}

.button-hover {
  background-color: #fff;
}

.setting_icon {
  width: 40rpx;
  height: 40rpx;
}

.setting_text {
  color: rgba(0, 0, 0, 0.9);
}

.arrow_icon {
  width: 30rpx;
  height: 30rpx;
  background-color: #fff;
}
/* 在.wxss文件中 */
.page-container {
    position: relative;
  }
  
  .background-image {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 0; /* 确保图片在最底层 */
  }